<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/yukarıdanGelenBalonAnim"
        android:layout_width="290dp"
        android:layout_height="344dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toTopOf="@+id/btnOrtalamaHesaplaAnim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splash"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/todo" />

    <Button
        android:id="@+id/btnOrtalamaHesaplaAnim"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/splashbtn"
        android:text="@string/girisyap"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yukarıdanGelenBalonAnim"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>